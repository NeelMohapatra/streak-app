<div class='container-fluid'>
  <%= form_for(@user, html: {class: 'form-horizontal'}) do |f|%>
    <div class='form-group'>
      <%= f.label :first_name, 'First Name:', :class => 'control-label col-sm-2 col-md-2' %>
      <div class='col-sm-10 col-md-10'>
        <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :last_name, 'Last Name:', :class => 'control-label col-sm-2 col-md-2' %>
      <div class= 'col-sm-10 col-md-10'>
        <%= f.text_field :last_name, class: 'form-control', placeholder: "Last Name" %>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :email, 'Email:', :class=> 'control-label col-sm-2 col-md-2' %>
      <div class='col-sm-10 col-md-10'>
        <%= f.email_field :email, class: 'form-control', placeholder: "Email"%>
      </div>
    </div>
    <div class='form-group'>
      <%= f.label :password, 'Password:', :class => 'control-label col-sm-2 col-md-2' %>
      <div class='col-sm-10 col-md-10'>
        <%= f.password_field :password, class: 'form-control',placeholder: "Password" %>
      </div>
    </div>
    <div class='form-group'>
      <div class='col-sm-offset-2 col-sm-10 col-md-offset-2 col-md-10'>
        <%= f.submit "Sign Up", class: 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
